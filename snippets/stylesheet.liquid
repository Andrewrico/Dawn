{% comment%}
    # loadTemplateStylesheet.
    # This will load styles for each template files individually.
{% endcomment %}
{% assign loadOptimizedTemplateStylesheet = template.name %} 
{% case loadOptimizedTemplateStylesheet %}


{% when 'index' %}

    {% comment%} # image-banner {% endcomment %}
    {{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

    {% comment%} # featured-product {% endcomment %}
    <link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="{{ 'component-price.css' | asset_url }}" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="{{ 'component-badge.css' | asset_url }}" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="{{ 'template-collection.css' | asset_url }}" media="print" onload="this.media='all'">
    <noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>
    <noscript>{{ 'component-price.css' | asset_url | stylesheet_tag }}</noscript>
    <noscript>{{ 'component-badge.css' | asset_url | stylesheet_tag }}</noscript>
    <noscript>{{ 'template-collection.css' | asset_url | stylesheet_tag }}</noscript>

    {{ 'component-card.css' | asset_url | stylesheet_tag }}
    
    {% comment%} # image-with-text {% endcomment %}
    {{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}



{% when 'collection' %}

    <link rel="stylesheet" href="{{ 'main-collection.css' | asset_url }}" media="print" onload="this.media='all'">

    <noscript>{{ 'main-collection.css' | asset_url | stylesheet_tag }}</noscript>




{% when 'page' %}

    <link rel="stylesheet" href="{{ 'main-page.css' | asset_url }}" media="print" onload="this.media='all'">

    <noscript>{{ 'main-page.css' | asset_url | stylesheet_tag }}</noscript>




{% comment%} endcase {% endcomment %}
{% endcase %}


